{
  "name": "axxapy/easyfork",
  "description": "The easiest way to manage work for php (uses pcntl library)",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Alexey Manukhin",
      "email": "axxapy@gmail.com"
    }
  ],
  "config": {
    "platform": {
      "php": "7.0+"
    }
  },
  "require": {
    "axxapy/php_core": "^1.0",
    "ext-pcntl": "*",
    "ext-posix": "*",
    "ext-json": "*"
  },
  "suggest": {
    "ext-apcu": "*",
    "ext-sockets": "*",
    "ext-memcached": "*"
  },
  "require-dev": {
    "phpunit/phpunit": ">=9.4.2"
  },
  "autoload": {
    "psr-4": {
      "axxapy\\ThreadPool\\": "src",
      "axxapy\\EasyFork\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "axxapy\\EasyFork\\Tests\\": "tests"
    }
  }
}
